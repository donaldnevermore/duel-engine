{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "target": "ESNext",
        "allowJs": true,
        "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
