{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "isolatedModules": true,
        "target": "es6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
